<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.YolorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Accent color -->
        <item name="colorAccent">@color/accent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Custom styles -->
        <item name="materialButtonStyle">@style/Widget.YolorApp.Button</item>
        <item name="sliderStyle">@style/Widget.YolorApp.Slider.Dark</item>
    </style>
    
    <!-- Slider style for dark mode -->
    <style name="Widget.YolorApp.Slider.Dark" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorActive">@color/secondary</item>
        <item name="trackColorInactive">@color/gray</item>
        <item name="thumbColor">@color/secondary</item>
        <item name="haloColor">@color/secondary</item>
        <item name="labelStyle">@style/Widget.YolorApp.Tooltip.Dark</item>
    </style>
    
    <!-- Tooltip style for dark mode -->
    <style name="Widget.YolorApp.Tooltip.Dark" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- No ActionBar theme for camera screen (dark mode) -->
    <style name="Theme.YolorApp.NoActionBar" parent="Theme.YolorApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources> 